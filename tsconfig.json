{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "types": ["node"],
    "incremental": true
  },
  "include": ["src", "common", "node", "mcp"],
  "exclude": ["dist", "node_modules"]
}